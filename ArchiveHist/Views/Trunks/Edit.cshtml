@model ArchiveHist.Models.Trunk

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trunk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TId" />
            <div class="form-group">
                <label asp-for="BuildingNamePlanTitle" class="control-label"></label>
                <input asp-for="BuildingNamePlanTitle" class="form-control" />
                <span asp-validation-for="BuildingNamePlanTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanYear" class="control-label"></label>
                <input asp-for="PlanYear" class="form-control" />
                <span asp-validation-for="PlanYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArchitectFirmAssociated" class="control-label"></label>
                <input asp-for="ArchitectFirmAssociated" class="form-control" />
                <span asp-validation-for="ArchitectFirmAssociated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FolderName" class="control-label"></label>
                <input asp-for="FolderName" class="form-control" />
                <span asp-validation-for="FolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Links" class="control-label"></label>
                <input asp-for="Links" class="form-control" />
                <span asp-validation-for="Links" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CId" class="control-label"></label>
                <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
                <span asp-validation-for="CId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Delete section -->
    <div class="col-md-6 offset-md-1">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Delete this Trunks</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Are you sure you want to delete this?</h6>
                <p class="card-text">This action cannot be undone.</p>
                <dl class="row">
            <dt class="col-4 col-md-4 col-lg-3">
                Building Name
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.BuildingNamePlanTitle)
            </dd>
            <dt class="col-4 col-md-4 col-lg-3">
                Plan Year
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.PlanYear)
            </dd>
            <dt class="col-4 col-md-4 col-lg-3">
                @Html.DisplayNameFor(model => model.CId)
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.CId)
            </dd>
        </dl>

            <form asp-action="Delete" asp-route-id="@Model.TId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TId" />
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you absolutely sure you want to delete this item?');">
                    Delete
                </button>
            </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
