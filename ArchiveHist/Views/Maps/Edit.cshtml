@model ArchiveHist.Models.Map

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Map</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MId" />
            <div class="form-group">
                <label asp-for="MapName" class="control-label"></label>
                <input asp-for="MapName" class="form-control" />
                <span asp-validation-for="MapName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearRange" class="control-label"></label>
                <input asp-for="YearRange" class="form-control" />
                <span asp-validation-for="YearRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistManufacturer" class="control-label"></label>
                <input asp-for="ArtistManufacturer" class="form-control" />
                <span asp-validation-for="ArtistManufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DigitizedLink" class="control-label"></label>
                <input asp-for="DigitizedLink" class="form-control" />
                <span asp-validation-for="DigitizedLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Removed" class="control-label"></label>
                <input asp-for="Removed" class="form-control" />
                <span asp-validation-for="Removed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CId" class="control-label"></label>
                <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
                <span asp-validation-for="CId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Delete section -->
    <div class="col-md-6 offset-md-1">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Delete this Maps</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Are you sure you want to delete this?</h6>
                <p class="card-text">This action cannot be undone.</p>
                <dl class="row">
                    <dt class="col-4 col-sm-3">
            @Html.DisplayNameFor(model => model.MapName)
            </dt>
                    <dd class="col-8 col-sm-9" style="white-space: nowrap;">
                @Html.DisplayFor(model => model.MapName)
            </dd>
                    <dt class="col-4 col-sm-3">
                @Html.DisplayNameFor(model => model.YearRange)
            </dt>
                    <dd class="col-8 col-sm-9">
                @Html.DisplayFor(model => model.YearRange)
                    <dt class="col-4 col-sm-3">
                @Html.DisplayNameFor(model => model.CId)
            </dt>
                    <dd class="col-8 col-sm-9">
                @Html.DisplayFor(model => model.CId)
            </dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MId" />
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you absolutely sure you want to delete this item?');">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
