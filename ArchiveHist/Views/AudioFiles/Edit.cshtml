@model ArchiveHist.Models.AudioFile
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>AudioFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AId" />
            <div class="form-group">
                <label asp-for="LinkName" class="control-label"></label>
                <input asp-for="LinkName" class="form-control" />
                <span asp-validation-for="LinkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CId" class="control-label"></label>
                <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
                <span asp-validation-for="CId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Delete section -->
    <div class="col-md-6 offset-md-1">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Delete this AudioFile</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Are you sure you want to delete this?</h6>
                <p class="card-text">This action cannot be undone.</p>

                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.LinkName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.LinkName)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.CId)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CId)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="AId" />
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you absolutely sure you want to delete this item?');">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}