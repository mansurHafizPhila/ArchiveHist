@model ArchiveHist.Models.Photo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistAgency" class="control-label"></label>
                <input asp-for="ArtistAgency" class="form-control" />
                <span asp-validation-for="ArtistAgency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CId" class="control-label"></label>
                <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
                <span asp-validation-for="CId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Delete section -->
    <div class="col-md-6 offset-md-1">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Delete this Photos</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Are you sure you want to delete this?</h6>
                <p class="card-text">This action cannot be undone.</p>
                <dl class="row">
                    <dt class="col-4 col-md-4 col-lg-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-4 col-md-4 col-lg-3">
                Artist
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.ArtistAgency)
            </dd>
            <dt class="col-4 col-md-4 col-lg-3">
                @Html.DisplayNameFor(model => model.CId)
            </dt>
            <dd class="col-8 col-md-8 col-lg-9">
                @Html.DisplayFor(model => model.CId)
            </dd>
        </dl>
            <form asp-action="Delete" asp-route-id="@Model.PId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PId" />
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you absolutely sure you want to delete this item?');">
                    Delete
                </button>
            </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
